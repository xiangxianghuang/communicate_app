<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RadioGroup
        android:id="@+id/arm_reset_rgp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/arm_reset_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="手臂初始化"
            />

        <RadioButton
            android:id="@+id/arm_left_rbn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="左"
            />

        <RadioButton
            android:id="@+id/arm_right_rbn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="右"
            />

        <RadioButton
            android:id="@+id/arm_all_rbn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部"
            />

    </RadioGroup>


    <RadioGroup
        android:id="@+id/palm_reset_rgp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/palm_reset_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="手掌初始化"
            />

        <RadioButton
            android:id="@+id/palm_left_rbn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="左"
            />

        <RadioButton
            android:id="@+id/palm_right_rbn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="右"
            />

        <RadioButton
            android:id="@+id/palm_all_rbn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部"
            />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/finger_wheel_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="手指轮动"
            />

        <EditText
            android:id="@+id/finger_wheel_ett"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="233"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/hand_shark_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="握手"
            />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"
            />
        <Button
            android:id="@+id/good_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="点赞"
            />

        <Button
            android:id="@+id/dance_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="跳舞"
            />

        <Button
            android:id="@+id/rock_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="石头"
            />

        <Button
            android:id="@+id/scissors_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="剪刀"
            />

        <Button
            android:id="@+id/paper_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="布"
            />

    </LinearLayout>

</LinearLayout>